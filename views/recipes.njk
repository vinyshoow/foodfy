{% extends "layout.njk" %}
{% set bodyId = "recipes" %}

{%block head%}
  <head>
    <title>
      Foodfy - Receitas
    </title>
    <link rel="stylesheet" href="/styles.css">   
  </head>
{%endblock%}

{%block menu%}
  <a href="/about">Sobre</a>
  <a href="/recipes"><strong>Receitas</strong></a>
{%endblock%}

    {% block content %}
    <section class="cards">
      {% for item in items%}
        <div class="card" id="{{item.id}}">
          <div class="card_image-container">
            <img src="{{item.img_url}}" alt="{{item.title}}">
          </div>
    
          <div class="card_content">
            <p>{{item.title}}</p>
          </div>
          
          <div class="card_info">
            <p>{{item.description}}</p>
          </div>
        </div>
      {% endfor %}
     
    </section>

    <div class="modal-overlay">
      <div class="modal">

        

        <div class="modal-content">
          <img src="" alt="">
          <p class="modal-title"></p>
          <p class="modal-author"></p>

          <p class="close-modal">
            Fechar modal
          </p>
        </div>
      </div>
    </div>
    {% endblock %}
    
    
