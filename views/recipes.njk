{% extends "layout.njk" %}
{% set bodyId = "recipes" %}

{%block head%}
  <head>
    <title>
      Foodfy - Receitas
    </title>
    <link rel="stylesheet" href="/styles.css">   
  </head>
{%endblock%}

{%block menu%}
  <a href="/about">Sobre</a>
  <a href="/recipes"><strong>Receitas</strong></a>
{%endblock%}

    {% block content %}
    <section class="cards">
    
        <div class="card-recipe" id="{{recipe.id}}">
          <div class="card_image-container">
            <img src="{{recipe.image}}" alt="{{recipe.title}}">
          </div>
    
          <div class="card_content">
            <p>{{recipe.title}}</p>
          </div>
          
          <div class="card_info">
            <p>{{recipe.author}}</p>
          </div>

          <div class="card-ingredients">
            <a onclick="showHideIng()" class="showHideIng">ESCONDER</a>
            <h1>Ingredientes</h1>
            <ul class="" id="showHideIng">
            {%for ingredient in recipe.ingredients%}
              <li>{{ingredient}};</li>
            {% endfor %}
            
            </ul>
          </div>

          <div class="card-preparation">
            <h1>Modo de preparo</h1>
            <a onclick="showHidePrep()" class="showHidePrep">ESCONDER</a>
            <p id="showHidePrep">{{recipe.preparation}}</p>
        
          </div>

          <div class="card-information">
            <h1>Informações adicionais</h1>
            <a onclick="showHideInfo()" class="showHideInfo">ESCONDER</a>
            <p id="showHideInfo">{{recipe.information}}</p>
          </div>
        </div>
      
     
    </section>
    <script src="/scripts.js"></script>

    {% endblock %}
    
    
