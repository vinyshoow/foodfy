{% extends "layout.njk" %}

{%block head%}
  <head>
    <title>
      Foodfy - Sobre
    </title>
    <link rel="stylesheet" href="/styles.css">   
  </head>
{%endblock%}



{% block header %}
    <header class="list">
        <div id="menuList" class="admin">
          <a href="/">
            <img src="/logoWhite.png" alt="Foodfy">
          </a>
        </div>
      </header>
{% endblock header %}


{% block content %}
    <h1 id="list">Gerenciar Receitas</h1>

    <section class="cardsLists">
      {% for item in items%}
        <div class="cardLists" id="{{item.id}}">
          <div class="card_image-container">
            <img src="{{item.image}}" alt="{{item.title}}">
          </div>

          <div class="card_contentList">
            <p class="card_title">{{item.title}}</p>
            <p class="card_subtitle">por {{item.author}}</p>
            <p class="visualizar" id="{{item.id}}">
              <a>Visualizar</a>
            </p>
          </div>
        </div>
      {% endfor %}
    </section>

    <script src="/scripts.js"></script>
{% endblock content %}