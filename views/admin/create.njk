{% extends "layout.njk" %}

{%block head%}
  <head>
    <title>
      Foodfy - Sobre
    </title>
    <link rel="stylesheet" href="/styles.css">   
  </head>
{%endblock%}



{% block header %}
    <header class="list">
        <div id="menuList" class="admin">
          <a href="/">
            <img src="/logoWhite.png" alt="Foodfy">
          </a>
        </div>
      </header>
{% endblock header %}

{% block content %}
  <form class="create" method="POST" action="/">
  
    <div class="createRecipe">
      <p>Criando Receita</p>
      <button type="submit">Salvar Receita</button>
    </div>

    
    <div class="item">
      <div>Imagem da receita</div>
      <div>
        <input 
          type="url"
          name="img_url"
          placeholder=""
          value=""
         >
      </div>
    </div>

    <div class="item" id="ingredients">
      <div>Ingredientes</div>
      <div class="ingredient">
        <input type="text" name="ingredients[]" value="" placeholder="" />
      </div>
    </div>
    <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>

    <div class="item" id="preparations">
      <div>Modo de preparo</div>
      <div class="preparation">
        <input type="text" name="preparations[]" value="" placeholder="" />
      </div>
    </div>
    <button type="button" class="add-preparation">Adicionar novo passo</button>

    <div class="item" id="info">
      <div>Informações adicionais</div>
      <textarea name="infoAdicionais" cols="30" rows="10"></textarea>
    </div>

  </form>

{% endblock content %}